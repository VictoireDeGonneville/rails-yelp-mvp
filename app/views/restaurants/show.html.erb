<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">
<div class="showing">
<h1> <%= @restaurant.name %></h1>
<br>
<p> Adress: <%= @restaurant.address %></p>
<br>
<p> Phone: <%= @restaurant.phone_number %> </p>
<p> Category <%= @restaurant.category %> </p>
<h4>Reviews: </h4>
      <% @review.each do |review| %>
        <li> "<%= review.content %>" | <%= review.rating %></li>
        <%= link_to ' [ Delete ]', review_path(review),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      <% end %>
      </div>
      </br>
      <%= link_to "writing reviews", new_restaurant_review_path(@restaurant)%>

<li><%= link_to "Back", restaurants_path %></li>

